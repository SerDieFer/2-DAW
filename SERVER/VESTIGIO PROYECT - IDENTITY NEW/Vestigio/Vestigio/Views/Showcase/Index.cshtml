@model List<Challenge>
@{
    var userLevel = (int?)ViewBag.UserLevel ?? 1;
    var solvedChallenges = ViewBag.SolvedChallenges as List<int> ?? new List<int>();
    var unlockedProducts = ViewBag.UnlockedProducts as List<Product> ?? new List<Product>();
}

<div class="showcase-container">
    <div class="nav-container mb-5">
        <ul class="nav nav-pills d-inline-flex mx-auto" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active text-uppercase"
                        id="challenges-tab"
                        data-bs-toggle="pill"
                        data-bs-target="#challenges"
                        type="button"
                        role="tab">
                    Challenges
                    <span class="badge ms-2">@Model.Count</span>
                </button>
            </li>
            @if (unlockedProducts.Any())
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link text-uppercase"
                            id="products-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#products"
                            type="button"
                            role="tab">
                        Collection
                        <span class="badge ms-2">@unlockedProducts.Count</span>
                    </button>
                </li>
            }
        </ul>
    </div>

    <div class="tab-content">
        <!-- Challenges Section -->
        <div class="tab-pane fade show active" id="challenges" role="tabpanel">
            <div class="row g-4">
                @foreach (var challenge in Model)
                {
                    var isUnlocked = challenge.RarityLevel <= userLevel &&
                    (challenge.SolutionMode != SolutionMode.TimeBased || challenge.IsPublic);
                    var isSolved = solvedChallenges.Contains(challenge.Id);

                    <div class="col-md-6 col-lg-4">
                        <div class="challenge-card @(!isUnlocked ? "locked" : "") @(isSolved ? "solved" : "")">
                            <div class="challenge-image position-relative">
                                @if (challenge.Images != null && challenge.Images.Any())
                                {
                                    <img src="@challenge.Images.First().Url" alt="@challenge.Title" class="img-fluid">
                                }
                                else
                                {
                                    <div class="placeholder-image"></div>
                                }

                                @if (isSolved)
                                {
                                    <div class="solved-badge position-absolute top-0 end-0 m-3">
                                        <i class="fas fa-check-circle"></i>
                                        <span>Solved</span>
                                    </div>
                                }
                            </div>
                            <div class="challenge-card-inner">
                                <div class="challenge-header">
                                    <div class="rarity-badge" data-level="@challenge.RarityLevel">
                                        <div class="rarity-icon">
                                            <i class="fas fa-crown"></i>
                                        </div>
                                        <div class="rarity-info">
                                            <span class="rarity-level">Level @challenge.RarityLevel</span>
                                            <span class="rarity-name">- @challenge.RarityName</span>
                                        </div>
                                    </div>

                                </div>

                                <h3 class="challenge-title">@challenge.Title</h3>

                                <div class="challenge-description-preview">
                                    @challenge.Description.Substring(0, Math.Min(100, challenge.Description.Length))...
                                </div>

                                <div class="challenge-rewards">
                                    <div class="reward">
                                        <i class="fas fa-coins"></i>
                                        <span>@challenge.Coins</span>
                                    </div>
                                    <div class="reward">
                                        <i class="fas fa-star"></i>
                                        <span>@challenge.ExpPoints XP</span>
                                    </div>
                                </div>

                                @if (isUnlocked && !isSolved)
                                {
                                    <button class="btn-solve" data-bs-toggle="modal" data-bs-target="#challengeModal-@challenge.Id">
                                        Solve Challenge
                                        <i class="fas fa-arrow-right"></i>
                                    </button>
                                }
                                else if (!isUnlocked)
                                {
                                    <div class="lock-message">
                                        <i class="fas fa-lock"></i>
                                        <span>Requires Level @challenge.RarityLevel</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Challenge Modal -->
                        <div class="modal fade challenge-modal" id="challengeModal-@challenge.Id" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header bg-dark text-white">
                                        <div class="w-100">
                                            <h5 class="modal-title fs-3 mb-2">@challenge.Title</h5>

                                            <div class="d-flex align-items-center flex-row gap-3">
                                                <div class="rarity-badge flex-row">
                                                    <div class="rarity-icon text-warning">
                                                        <i class="fas fa-crown"></i>
                                                    </div>
                                                    <div class="rarity-info">
                                                        <span class="rarity-level">LEVEL @challenge.RarityLevel</span>
                                                        <span class="rarity-name">- @challenge.RarityName</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body p-4">
                                        <div class="challenge-details">
                                            <!-- Sección de Descripción -->
                                            <section class="mb-4 d-flex flex-row">

                                                <div class="col-md-8">
                                                    <h6 class="text-uppercase text-muted mb-3 fw-bold">Challenge Description</h6>
                                                    <p class="challenge-description lead">@challenge.Description</p>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="challenge-meta gap-3" style="display: grid; grid-template-columns: 1fr;">
                                                        <div class="meta-item p-3 bg-light">
                                                            <i class="fas fa-calendar text-primary"></i>
                                                            <span>Created:<br>@challenge.CreationDate.ToString("MMMM dd, yyyy")</span>
                                                        </div>
                                                        @if (challenge.SolutionMode == SolutionMode.TimeBased && challenge.ReleaseDate.HasValue)
                                                        {
                                                            <div class="meta-item p-3 bg-light">
                                                                <i class="fas fa-clock text-success"></i>
                                                                <span>Release:<br>@challenge.ReleaseDate.Value.ToString("MMMM dd, yyyy HH:mm")</span>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </section>

                                            <!-- Sección de Recompensas -->
                                            <div class="challenge-rewards mb-4">
                                                <h6 class="text-uppercase text-muted mb-3 fw-bolder">Rewards</h6>
                                                <div class="row g-3">
                                                    <div class="col">
                                                        <div class="reward bg-warning bg-opacity-10 p-3">
                                                            <i class="fas fa-coins text-warning"></i>
                                                            <div>
                                                                <div class="fw-bold">@challenge.Coins</div>
                                                                <small class="text-muted">Challenge Coins</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col">
                                                        <div class="reward bg-warning bg-opacity-10 p-3">
                                                            <i class="fas fa-star text-purple"></i>
                                                            <div>
                                                                <div class="fw-bold">@challenge.ExpPoints</div>
                                                                <small class="text-muted">Experience Points</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Sección de Desbloqueos -->
                                            @if (challenge.ProductLevel.HasValue || challenge.ProductId.HasValue)
                                            {
                                                <div class="unlock-info mb-4">
                                                    <h6 class="text-uppercase text-muted mb-3">Unlocks</h6>
                                                    <div class="row g-3">
                                                        @if (challenge.ProductLevel.HasValue)
                                                        {
                                                            <div class="col">
                                                                <div class="d-flex align-items-center gap-3 p-3 bg-light">
                                                                    <i class="fas fa-layer-group text-primary"></i>
                                                                    <div>
                                                                        <div class="fw-bold">Level @challenge.ProductLevel</div>
                                                                        <small class="text-muted">Premium Products</small>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                        @if (challenge.ProductId.HasValue)
                                                        {
                                                            <div class="col">
                                                                <div class="d-flex align-items-center gap-3 p-3 bg-light">
                                                                    <i class="fas fa-gift text-success"></i>
                                                                    <div>
                                                                        <div class="fw-bold">Exclusive Product</div>
                                                                        <small class="text-muted">Special Unlock</small>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }

                                            <!-- Formulario de Solución -->
                                            <form asp-action="SolveChallenge" method="post" class="solve-form">
                                                <input type="hidden" name="challengeId" value="@challenge.Id" />

                                                @if (challenge.SolutionMode == SolutionMode.Password)
                                                {
                                                    <div class="mb-4">
                                                        <label class="form-label text-muted">Enter Challenge Password</label>
                                                        <div class="input-group">
                                                            <input type="password"
                                                                   name="password"
                                                                   class="form-control border-2 py-3"
                                                                   placeholder="••••••••"
                                                                   required>
                                                            <span class="input-group-text bg-dark text-white">
                                                                <i class="fas fa-key"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                }

                                                <button type="submit" class="btn-solve w-100 py-3">
                                                    <span>Solve Challenge</span>
                                                    <i class="fas fa-arrow-right transition-transform"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>


                                     
                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>

        <!-- Products Collection Section -->
        @if (unlockedProducts.Any())
        {
            <div class="tab-pane fade" id="products" role="tabpanel">
                <div class="row g-4">
                    @foreach (var product in unlockedProducts)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3">
                            <div class="product-card">
                                <div class="product-image">
                                    @if (product.Images?.Any() == true)
                                    {
                                        <img src="@product.Images.First().Url"
                                             alt="@product.Name"
                                             class="img-fluid">
                                    }
                                    <div class="product-rarity" data-level="@product.RarityLevel">
                                        <i class="fas fa-diamond"></i>
                                        <span>@product.RarityName</span>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <h3 class="product-title">@product.Name</h3>
                                    <p class="product-description">@product.Description.Substring(0, Math.Min(100, product.Description.Length))...</p>
                                    <div class="product-footer">
                                        <span class="product-price">@product.Price.ToString("C")</span>
                                        <button class="btn-details"
                                                data-bs-toggle="modal"
                                                data-bs-target="#productModal-@product.Id">
                                            View Details
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Product Modal -->
                            <div class="modal fade product-modal" id="productModal-@product.Id" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered modal-xl">
                                    <div class="modal-content">
                                        <button type="button" class="modal-close" data-bs-dismiss="modal">
                                            <i class="fas fa-times"></i>
                                        </button>

                                        <div class="modal-body p-0">
                                            <div class="row g-0">
                                                <!-- Left Column - Image Gallery -->
                                                <div class="col-lg-7 product-gallery">
                                                    <div class="gallery-container">
                                                        @if (product.Images?.Any() == true)
                                                        {
                                                            <div class="swiper-container">
                                                                <div class="swiper-wrapper">
                                                                    @foreach (var image in product.Images)
                                                                    {
                                                                        <div class="swiper-slide">
                                                                            <div class="image-wrapper">
                                                                                <img src="@image.Url" alt="@product.Name" class="img-fluid">
                                                                            </div>
                                                                        </div>
                                                                    }
                                                                </div>
                                                                <div class="swiper-pagination"></div>
                                                                <div class="swiper-button-prev"></div>
                                                                <div class="swiper-button-next"></div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>

                                                <!-- Right Column - Product Details -->
                                                <div class="col-lg-5 product-details">
                                                    <div class="details-scroll">
                                                        <!-- Product Header -->
                                                        <div class="product-header">
                                                            <div class="rarity-badge" data-level="@product.RarityLevel">
                                                                <div class="rarity-icon">
                                                                    <i class="fas fa-diamond"></i>
                                                                </div>
                                                                <div class="rarity-info">
                                                                    <span class="rarity-level">Level @product.RarityLevel</span>
                                                                    <span class="rarity-name">@product.RarityName</span>
                                                                </div>
                                                            </div>

                                                            <h2 class="product-title">@product.Name</h2>

                                                            <div class="product-meta">
                                                                <span class="discovery-date">
                                                                    <i class="fas fa-calendar"></i>
                                                                    Discovered @product.CreationDate.ToString("MMMM dd, yyyy")
                                                                </span>
                                                            </div>

                                                            <!-- Categories -->
                                                            <div class="category-tags">
                                                                @foreach (var category in product.ProductCategories)
                                                                {
                                                                    <span class="category-tag">@category.Category.Name</span>
                                                                }
                                                            </div>
                                                        </div>

                                                        <!-- Product Story -->
                                                        <div class="product-story">
                                                            <div class="story-content">
                                                                <p class="description">@product.Description</p>

                                                                <div class="story-details">
                                                                    <div class="detail-item">
                                                                        <span class="detail-label">Total Stock</span>
                                                                        <span class="detail-value">@product.TotalStock pieces available</span>
                                                                    </div>

                                                                    <div class="detail-item">
                                                                        <span class="detail-label">Associated Challenges</span>
                                                                        <div class="challenge-list">
                                                                            @if (product.Challenges?.Any() == true)
                                                                            {
                                                                                @foreach (var challenge in product.Challenges)
                                                                                {
                                                                                    <span class="challenge-tag">@challenge.Title</span>
                                                                                }
                                                                            }
                                                                            else
                                                                            {
                                                                                <span class="no-challenges">No associated challenges</span>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Size Selection -->
                                                        <div class="size-selection">
                                                            <h3 class="section-title">Select Your Size</h3>
                                                            <div class="size-grid">
                                                                @foreach (var size in product.ProductSizes.OrderBy(s => s.Size))
                                                                {
                                                                    <button type="button"
                                                                            class="size-btn @(!size.IsActive || size.Stock <= 0 ? "disabled" : "")"
                                                                            data-size-id="@size.Id"
                                                                            data-stock="@size.Stock"
                                                                            onclick="selectSize(this, @product.Id)">
                                                                        <span class="size-label">@size.Size</span>
                                                                        <span class="stock-indicator" style="--stock-level: @(size.Stock * 100 / Math.Max(size.Stock, 20))%">
                                                                            <span class="stock-count">@size.Stock left</span>
                                                                        </span>
                                                                    </button>
                                                                }
                                                            </div>
                                                        </div>

                                                        <!-- Purchase Section -->
                                                        <div class="purchase-section">
                                                            <div class="price-tag">
                                                                <span class="currency">$</span>
                                                                <span class="amount">@product.Price.ToString("N2")</span>
                                                            </div>

                                                            <div class="quantity-selector">
                                                                <button class="qty-btn" onclick="adjustQuantity(@product.Id, -1)">
                                                                    <i class="fas fa-minus"></i>
                                                                </button>
                                                                <input type="number"
                                                                       id="quantity-@product.Id"
                                                                       value="1"
                                                                       min="1"
                                                                       readonly>
                                                                <button class="qty-btn" onclick="adjustQuantity(@product.Id, 1)">
                                                                    <i class="fas fa-plus"></i>
                                                                </button>
                                                            </div>

                                                            <form asp-action="AddToCart" method="post" class="add-to-cart-form">
                                                                <input type="hidden" name="productSizeId" id="selectedSize-@product.Id">
                                                                <input type="hidden" name="quantity" id="selectedQuantity-@product.Id">
                                                                <button type="submit" class="btn-add-cart" disabled>
                                                                    <span class="btn-text">Add to Collection</span>
                                                                    <i class="fas fa-arrow-right"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link href="~/css/showcase.css" rel="stylesheet" />
}

<script>
    // Initialize Swiper for image gallery
    document.addEventListener('DOMContentLoaded', function() {
        const productSwipers = document.querySelectorAll('.product-modal .swiper-container');
        productSwipers.forEach(container => {
            new Swiper(container, {
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                loop: true
            });
        });

        const challengeSwipers = document.querySelectorAll('.challenge-modal .swiper-container');
        challengeSwipers.forEach(container => {
            new Swiper(container, {
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                loop: true
            });
        });
    });

    // Enhanced size selection
    function selectSize(btn, productId) {
        const sizeButtons = btn.closest('.size-grid').querySelectorAll('.size-btn');
        sizeButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const sizeId = btn.dataset.sizeId;
        const stock = parseInt(btn.dataset.stock);
        const quantityInput = document.getElementById(`quantity-${productId}`);
        const addToCartBtn = btn.closest('.product-details').querySelector('.btn-add-cart');

        document.getElementById(`selectedSize-${productId}`).value = sizeId;
        document.getElementById(`selectedQuantity-${productId}`).value = quantityInput.value;

        quantityInput.max = stock;
        addToCartBtn.disabled = false;

        // Animate the button
        addToCartBtn.classList.add('pulse');
        setTimeout(() => addToCartBtn.classList.remove('pulse'), 500);
    }

    // Enhanced quantity adjustment
    function adjustQuantity(productId, delta) {
        const input = document.getElementById(`quantity-${productId}`);
        const currentValue = parseInt(input.value);
        const max = parseInt(input.max) || 10;

        const newValue = Math.max(1, Math.min(max, currentValue + delta));

        if (newValue !== currentValue) {
            input.value = newValue;
            document.getElementById(`selectedQuantity-${productId}`).value = newValue;

            // Animate the quantity change
            input.classList.add('pulse');
            setTimeout(() => input.classList.remove('pulse'), 300);
        }
    }
</script>

