@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Secure Credentials";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    .password-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
    }

    .password-header {
        border-bottom: 3px solid #000;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

        .password-header h3 {
            font-family: 'Space Grotesk', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: -0.5px;
        }

    .security-notice {
        background: #f8f9fa;
        border: 2px solid #000;
        padding: 1.5rem;
        margin-bottom: 2rem;
        font-weight: 500;
        line-height: 1.6;
    }

    .form-floating label {
        text-transform: uppercase;
        letter-spacing: 0.8px;
        font-weight: 500;
        color: #666;
    }

    .form-control {
        border-radius: 0;
        border: none;
        border-bottom: 2px solid #e0e0e0;
        padding-left: 0.5rem;
        background: transparent;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .form-control:focus {
            box-shadow: none;
            border-bottom-color: #000;
            background: #f8f9fa;
        }

    #set-password-form button[type="submit"] {
        background: #000;
        color: #fff;
        border: 2px solid #000;
        padding: 1.25rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        transition: all 0.3s ease;
        margin-top: 1.5rem;
    }

        #set-password-form button[type="submit"]:hover {
            background: transparent;
            color: #000;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .password-container {
            padding: 1.5rem;
        }

        .password-header h3 {
            font-size: 1.8rem;
        }
    }
</style>

<div class="password-container">
    <div class="password-header">
        <h3>Establish Secure Access</h3>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="security-notice">
        <i class="fas fa-shield-alt me-2"></i>
        No local credentials detected. Create secure access to enable direct authentication.
    </div>

    <div class="row">
        <div class="col-md-8">
            <form id="set-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" />
                    <label asp-for="Input.NewPassword">New Cipher</label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Cipher</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="w-100 btn btn-lg">
                    <i class="fas fa-key me-2"></i>Secure Account
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
}