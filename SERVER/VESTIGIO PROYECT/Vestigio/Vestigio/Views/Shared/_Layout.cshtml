<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vestigio</title>

    @* ESTILOS Y ELEMENTOS BOOTSTRAP *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vestigio.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

    @* NAV PRINCIPAL *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-4">
        <div class="container">

            @* LOGO VESTIGIO CON TEXTO *@
            <a class="navbar-brand fs-2 fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/images/vestigio_logo.png" width="48" alt="Logo Vestigio" class="me-2 font-monospace" />
                VESTIGIO
            </a>

            @* BOTÓN MENÚ (PANTALLAS REDUCIDAS) *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>

            @* CONTENIDO DEL NAV *@
            <div class="collapse navbar-collapse justify-content-center" id="navbarContent">

                @* LINKS CENTRADOS *@
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link fs-5" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link fs-5" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-5" asp-area="" asp-controller="Image" asp-action="Index">Images</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link fs-5" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-5" asp-area="" asp-controller="Challenge" asp-action="Index">Challenges</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-5" asp-area="" asp-controller="ChallengeResolution" asp-action="Index">Challenges Resolutions</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link fs-5" asp-area="" asp-controller="Order" asp-action="Index">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-5" asp-area="" asp-controller="OrderDetail" asp-action="Index">Orders Details</a>
                    </li>
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link fs-5" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a> *@
                    @* </li> *@
                </ul>
            </div>
            
            @* MAJEADOR DE LOGIN *@
            <partial name="_LoginPartial" />
        </div>
    </nav>

    @* CONTENIDO PRINCIPAL *@
    <div class="container py-5 pt-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @* FOOTER *@
    <footer class="footer bg-dark text-center text-white py-2">
        <div class="container">
            <p class="mb-0">&copy; 2025 - Vestigio - <a class="text-white" href="/Home/Privacy">Privacidad</a></p>
        </div>
    </footer>

    @* SCRIPTS BOOTSRAP *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
