@model Vestigio.Models.Challenge

<div class="modal fade" id="deleteChallengeModal-@Model.Id" tabindex="-1" aria-labelledby="deleteChallengeModal-@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel-@Model.Id">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the challenge <strong>@Model.Title</strong>?
                <div class="alert alert-warning mt-3">
                    <strong>Warning!</strong> Deleting this challenge may affect other fields in the database. It is recommended to mark the challenge as inactive instead.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <!-- Botón para marcar el desafío como inactivo -->
                <form asp-action="MarkAsInactive" asp-controller="Challenges" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-warning">Mark as Inactive</button>
                </form>

                <!-- Botón para eliminar el desafío -->
                <form asp-action="DeleteConfirmed" asp-controller="Challenges" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>