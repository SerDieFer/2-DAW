<script>
    // Initialize Swiper for image gallery
    document.addEventListener('DOMContentLoaded', function() {
        const productSwipers = document.querySelectorAll('.product-modal .swiper-container');
        productSwipers.forEach(container => {
            new Swiper(container, {
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                loop: true
            });
        });

        const challengeSwipers = document.querySelectorAll('.challenge-modal .swiper-container');
        challengeSwipers.forEach(container => {
            new Swiper(container, {
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                loop: true
            });
        });
    });

    // Enhanced size selection
    function selectSize(btn, productId) {
        const sizeButtons = btn.closest('.size-grid').querySelectorAll('.size-btn');
        sizeButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const sizeId = btn.dataset.sizeId;
        const stock = parseInt(btn.dataset.stock);
        const quantityInput = document.getElementById(`quantity-${productId}`);
        const addToCartBtn = btn.closest('.product-details').querySelector('.btn-add-cart');

        document.getElementById(`selectedSize-${productId}`).value = sizeId;
        document.getElementById(`selectedQuantity-${productId}`).value = quantityInput.value;

        quantityInput.max = stock;
        addToCartBtn.disabled = false;

        // Animate the button
        addToCartBtn.classList.add('pulse');
        setTimeout(() => addToCartBtn.classList.remove('pulse'), 500);
    }

    // Enhanced quantity adjustment
    function adjustQuantity(productId, delta) {
        const input = document.getElementById(`quantity-${productId}`);
        const currentValue = parseInt(input.value);
        const max = parseInt(input.max) || 10;

        const newValue = Math.max(1, Math.min(max, currentValue + delta));

        if (newValue !== currentValue) {
            input.value = newValue;
            document.getElementById(`selectedQuantity-${productId}`).value = newValue;

            // Animate the quantity change
            input.classList.add('pulse');
            setTimeout(() => input.classList.remove('pulse'), 300);
        }
    }
</script>

