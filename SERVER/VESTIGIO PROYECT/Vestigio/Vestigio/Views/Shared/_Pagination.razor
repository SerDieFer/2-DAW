@typeparam TItem
@* Pagination.razor *@

@* Parámetros *@
@{
    var prevDisabled = !HasPreviousPage ? "disabled" : "";
    var nextDisabled = !HasNextPage ? "disabled" : "";
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a class="page-link" asp-action="@ActionName" asp-route-pageNumber="@(PageIndex - 1)">Previous</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Page @PageIndex of @TotalPages</span>
        </li>
        <li class="page-item @nextDisabled">
            <a class="page-link" asp-action="@ActionName" asp-route-pageNumber="@(PageIndex + 1)">Next</a>
        </li>
    </ul>
</nav>

@code {
    [Parameter] public string ActionName { get; set; }
    [Parameter] public int PageIndex { get; set; }
    [Parameter] public int TotalPages { get; set; }
    [Parameter] public bool HasPreviousPage { get; set; }
    [Parameter] public bool HasNextPage { get; set; }
}
