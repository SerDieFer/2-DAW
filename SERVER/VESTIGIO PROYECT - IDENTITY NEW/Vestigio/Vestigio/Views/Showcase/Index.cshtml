@model List<Challenge>
@{
    var userLevel = (int?)ViewBag.UserLevel ?? 1;
    var solvedChallenges = ViewBag.SolvedChallenges as List<int> ?? new List<int>();
    var unlockedProducts = ViewBag.UnlockedProducts as List<Product> ?? new List<Product>();
}

<div class="showcase-container">
    <div class="nav-container mb-5">
        <ul class="nav nav-pills d-inline-flex mx-auto" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active text-uppercase"
                        id="challenges-tab"
                        data-bs-toggle="pill"
                        data-bs-target="#challenges"
                        type="button"
                        role="tab">
                    Challenges
                    <span class="badge ms-2">@Model.Count</span>
                </button>
            </li>
            @if (unlockedProducts.Any())
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link text-uppercase"
                            id="products-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#products"
                            type="button"
                            role="tab">
                        Collection
                        <span class="badge ms-2">@unlockedProducts.Count</span>
                    </button>
                </li>
            }
        </ul>
    </div>

    <div class="tab-content">
        <!-- Challenges Section -->
        <div class="tab-pane fade show active" id="challenges" role="tabpanel">
            <div class="row g-4">
                @foreach (var challenge in Model)
                {
                    var isUnlocked = challenge.RarityLevel <= userLevel &&
                    (challenge.SolutionMode != SolutionMode.TimeBased || challenge.IsPublic);
                    var isSolved = solvedChallenges.Contains(challenge.Id);

                    <div class="col-md-6 col-lg-4">
                        <div class="challenge-card @(!isUnlocked ? "locked" : "") @(isSolved ? "solved" : "")">
                            <div class="challenge-image">
                                @if (challenge.Images != null && challenge.Images.Any())
                                {
                                    <img src="@challenge.Images.First().Url" alt="@challenge.Title" class="img-fluid">
                                }
                                else
                                {
                                    <div class="placeholder-image"></div>
                                }
                            </div>
                            <div class="challenge-card-inner">
                                <div class="challenge-header">
                                    <div class="rarity-badge" data-level="@challenge.RarityLevel">
                                        <div class="rarity-icon">
                                            <i class="fas fa-crown"></i>
                                        </div>
                                        <div class="rarity-info">
                                            <span class="rarity-level">Level @challenge.RarityLevel</span>
                                            <span class="rarity-name">@challenge.RarityName</span>
                                        </div>
                                    </div>
                                    @if (isSolved)
                                    {
                                        <div class="solved-badge">
                                            <i class="fas fa-check-circle"></i>
                                            <span>Solved</span>
                                        </div>
                                    }
                                </div>

                                <h3 class="challenge-title">@challenge.Title</h3>

                                <div class="challenge-description-preview">
                                    @challenge.Description.Substring(0, Math.Min(100, challenge.Description.Length))...
                                </div>

                                <div class="challenge-rewards">
                                    <div class="reward">
                                        <i class="fas fa-coins"></i>
                                        <span>@challenge.Coins</span>
                                    </div>
                                    <div class="reward">
                                        <i class="fas fa-star"></i>
                                        <span>@challenge.ExpPoints XP</span>
                                    </div>
                                </div>

                                @if (isUnlocked && !isSolved)
                                {
                                    <button class="btn-solve" data-bs-toggle="modal" data-bs-target="#challengeModal-@challenge.Id">
                                        Solve Challenge
                                        <i class="fas fa-arrow-right"></i>
                                    </button>
                                }
                                else if (!isUnlocked)
                                {
                                    <div class="lock-message">
                                        <i class="fas fa-lock"></i>
                                        <span>Requires Level @challenge.RarityLevel</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Challenge Modal -->
                        <div class="modal fade challenge-modal" id="challengeModal-@challenge.Id" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@challenge.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="challenge-details">
                                            <div class="rarity-badge" data-level="@challenge.RarityLevel">
                                                <div class="rarity-icon">
                                                    <i class="fas fa-crown"></i>
                                                </div>
                                                <div class="rarity-info">
                                                    <span class="rarity-level">Level @challenge.RarityLevel</span>
                                                    <span class="rarity-name">@challenge.RarityName</span>
                                                </div>
                                            </div>

                                            <p class="challenge-description">@challenge.Description</p>

                                            <div class="challenge-meta">
                                                <div class="meta-item">
                                                    <i class="fas fa-calendar"></i>
                                                    <span>Created: @challenge.CreationDate.ToString("MMMM dd, yyyy")</span>
                                                </div>
                                                @if (challenge.SolutionMode == SolutionMode.TimeBased && challenge.ReleaseDate.HasValue)
                                                {
                                                    <div class="meta-item">
                                                        <i class="fas fa-clock"></i>
                                                        <span>Release: @challenge.ReleaseDate.Value.ToString("MMMM dd, yyyy HH:mm")</span>
                                                    </div>
                                                }
                                            </div>

                                            <div class="challenge-rewards">
                                                <div class="reward">
                                                    <i class="fas fa-coins"></i>
                                                    <span>@challenge.Coins coins</span>
                                                </div>
                                                <div class="reward">
                                                    <i class="fas fa-star"></i>
                                                    <span>@challenge.ExpPoints XP</span>
                                                </div>
                                            </div>

                                            @if (challenge.ProductLevel.HasValue)
                                            {
                                                <div class="unlock-info">
                                                    <i class="fas fa-unlock"></i>
                                                    <span>Unlocks products of level @challenge.ProductLevel</span>
                                                </div>
                                            }
                                            @if (challenge.ProductId.HasValue)
                                            {
                                                <div class="unlock-info">
                                                    <i class="fas fa-gift"></i>
                                                    <span>Unlocks a specific product</span>
                                                </div>
                                            }

                                            @if (challenge.Images != null && challenge.Images.Any())
                                            {
                                                <div class="challenge-images swiper-container">
                                                    <div class="swiper-wrapper">
                                                        @foreach (var image in challenge.Images)
                                                        {
                                                            <div class="swiper-slide">
                                                                <img src="@image.Url" alt="Challenge Image" class="img-fluid">
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="swiper-pagination"></div>
                                                    <div class="swiper-button-next"></div>
                                                    <div class="swiper-button-prev"></div>
                                                </div>
                                            }

                                            <form asp-action="SolveChallenge" method="post" class="solve-form">
                                                <input type="hidden" name="challengeId" value="@challenge.Id" />
                                                @if (challenge.SolutionMode == SolutionMode.Password)
                                                {
                                                    <div class="password-input">
                                                        <input type="password"
                                                               name="password"
                                                               class="form-control"
                                                               placeholder="Enter Password"
                                                               required>
                                                    </div>
                                                }
                                                <button type="submit" class="btn-solve">
                                                    Solve Challenge
                                                    <i class="fas fa-arrow-right"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Products Collection Section -->
        @if (unlockedProducts.Any())
        {
            <div class="tab-pane fade" id="products" role="tabpanel">
                <div class="row g-4">
                    @foreach (var product in unlockedProducts)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3">
                            <div class="product-card">
                                <div class="product-image">
                                    @if (product.Images?.Any() == true)
                                    {
                                        <img src="@product.Images.First().Url"
                                             alt="@product.Name"
                                             class="img-fluid">
                                    }
                                    <div class="product-rarity" data-level="@product.RarityLevel">
                                        <i class="fas fa-diamond"></i>
                                        <span>@product.RarityName</span>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <h3 class="product-title">@product.Name</h3>
                                    <p class="product-description">@product.Description.Substring(0, Math.Min(100, product.Description.Length))...</p>
                                    <div class="product-footer">
                                        <span class="product-price">@product.Price.ToString("C")</span>
                                        <button class="btn-details"
                                                data-bs-toggle="modal"
                                                data-bs-target="#productModal-@product.Id">
                                            View Details
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Product Modal -->
                            <div class="modal fade product-modal" id="productModal-@product.Id" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered modal-xl">
                                    <div class="modal-content">
                                        <button type="button" class="modal-close" data-bs-dismiss="modal">
                                            <i class="fas fa-times"></i>
                                        </button>

                                        <div class="modal-body p-0">
                                            <div class="row g-0">
                                                <!-- Left Column - Image Gallery -->
                                                <div class="col-lg-7 product-gallery">
                                                    <div class="gallery-container">
                                                        @if (product.Images?.Any() == true)
                                                        {
                                                            <div class="swiper-container">
                                                                <div class="swiper-wrapper">
                                                                    @foreach (var image in product.Images)
                                                                    {
                                                                        <div class="swiper-slide">
                                                                            <div class="image-wrapper">
                                                                                <img src="@image.Url" alt="@product.Name" class="img-fluid">
                                                                            </div>
                                                                        </div>
                                                                    }
                                                                </div>
                                                                <div class="swiper-pagination"></div>
                                                                <div class="swiper-button-prev"></div>
                                                                <div class="swiper-button-next"></div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>

                                                <!-- Right Column - Product Details -->
                                                <div class="col-lg-5 product-details">
                                                    <div class="details-scroll">
                                                        <!-- Product Header -->
                                                        <div class="product-header">
                                                            <div class="rarity-badge" data-level="@product.RarityLevel">
                                                                <div class="rarity-icon">
                                                                    <i class="fas fa-diamond"></i>
                                                                </div>
                                                                <div class="rarity-info">
                                                                    <span class="rarity-level">Level @product.RarityLevel</span>
                                                                    <span class="rarity-name">@product.RarityName</span>
                                                                </div>
                                                            </div>

                                                            <h2 class="product-title">@product.Name</h2>

                                                            <div class="product-meta">
                                                                <span class="discovery-date">
                                                                    <i class="fas fa-calendar"></i>
                                                                    Discovered @product.CreationDate.ToString("MMMM dd, yyyy")
                                                                </span>
                                                            </div>

                                                            <!-- Categories -->
                                                            <div class="category-tags">
                                                                @foreach (var category in product.ProductCategories)
                                                                {
                                                                    <span class="category-tag">@category.Category.Name</span>
                                                                }
                                                            </div>
                                                        </div>

                                                        <!-- Product Story -->
                                                        <div class="product-story">
                                                            <div class="story-content">
                                                                <p class="description">@product.Description</p>

                                                                <div class="story-details">
                                                                    <div class="detail-item">
                                                                        <span class="detail-label">Total Stock</span>
                                                                        <span class="detail-value">@product.TotalStock pieces available</span>
                                                                    </div>

                                                                    <div class="detail-item">
                                                                        <span class="detail-label">Associated Challenges</span>
                                                                        <div class="challenge-list">
                                                                            @if (product.Challenges?.Any() == true)
                                                                            {
                                                                                @foreach (var challenge in product.Challenges)
                                                                                {
                                                                                    <span class="challenge-tag">@challenge.Title</span>
                                                                                }
                                                                            }
                                                                            else
                                                                            {
                                                                                <span class="no-challenges">No associated challenges</span>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Size Selection -->
                                                        <div class="size-selection">
                                                            <h3 class="section-title">Select Your Size</h3>
                                                            <div class="size-grid">
                                                                @foreach (var size in product.ProductSizes.OrderBy(s => s.Size))
                                                                {
                                                                    <button type="button"
                                                                            class="size-btn @(!size.IsActive || size.Stock <= 0 ? "disabled" : "")"
                                                                            data-size-id="@size.Id"
                                                                            data-stock="@size.Stock"
                                                                            onclick="selectSize(this, @product.Id)">
                                                                        <span class="size-label">@size.Size</span>
                                                                        <span class="stock-indicator" style="--stock-level: @(size.Stock * 100 / Math.Max(size.Stock, 20))%">
                                                                            <span class="stock-count">@size.Stock left</span>
                                                                        </span>
                                                                    </button>
                                                                }
                                                            </div>
                                                        </div>

                                                        <!-- Purchase Section -->
                                                        <div class="purchase-section">
                                                            <div class="price-tag">
                                                                <span class="currency">$</span>
                                                                <span class="amount">@product.Price.ToString("N2")</span>
                                                            </div>

                                                            <div class="quantity-selector">
                                                                <button class="qty-btn" onclick="adjustQuantity(@product.Id, -1)">
                                                                    <i class="fas fa-minus"></i>
                                                                </button>
                                                                <input type="number"
                                                                       id="quantity-@product.Id"
                                                                       value="1"
                                                                       min="1"
                                                                       readonly>
                                                                <button class="qty-btn" onclick="adjustQuantity(@product.Id, 1)">
                                                                    <i class="fas fa-plus"></i>
                                                                </button>
                                                            </div>

                                                            <form asp-action="AddToCart" method="post" class="add-to-cart-form">
                                                                <input type="hidden" name="productSizeId" id="selectedSize-@product.Id">
                                                                <input type="hidden" name="quantity" id="selectedQuantity-@product.Id">
                                                                <button type="submit" class="btn-add-cart" disabled>
                                                                    <span class="btn-text">Add to Collection</span>
                                                                    <i class="fas fa-arrow-right"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

