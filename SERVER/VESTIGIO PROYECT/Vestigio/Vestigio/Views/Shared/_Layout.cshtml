<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vestigio</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts: Modern Monospace -->
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vestigio.styles.css" asp-append-version="true" />

</head>
<body>

    <!-- NAVBAR -->
    <nav class="bg-dark shadow-sm py-3 navbar navbar-dark navbar-expand-lg shadow-sm py-3">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/images/vestigio_logo.png" width="40" alt="Vestigio Logo" class="me-2">
                VESTIGIO
            </a>

            <!-- Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house me-1"></i> Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index"><i class="bi bi-box me-1"></i> Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Images" asp-action="Index"><i class="bi bi-image me-1"></i> Images</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index"><i class="bi bi-list-ul me-1"></i> Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Challenges" asp-action="Index"><i class="bi bi-trophy me-1"></i> Challenges</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index"><i class="bi bi-cart me-1"></i> Orders</a>
                    </li>
                </ul>
            </div>

            <!-- Login Partial -->
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container py-5">
        <main>
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer bg-dark footer-dark text-center py-3">
        <div class="container">
            <p class="mb-0 text-light">&copy; 2025 Vestigio. <a href="/Home/Privacy">Privacy Policy</a></p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
