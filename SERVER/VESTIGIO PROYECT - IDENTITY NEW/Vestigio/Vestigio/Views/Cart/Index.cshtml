@model Order

<div class="container py-5">
    <h2 class="mb-4">🛒 Tu Carrito</h2>

    @if (Model?.OrderDetails?.Any() == true)
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model.OrderDetails)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5>@item.Product.Name</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <form asp-action="ChangeSize" method="post">
                                        <input type="hidden" name="orderDetailId" value="@item.Id" />
                                        <select name="newProductSizeId"
                                                class="form-select"
                                                onchange="this.form.submit()"
                                                asp-items="@(new SelectList(item.Product.ProductSizes.Where(ps => ps.IsActive && ps.Stock >= item.Quantity), "Id", "Size"))">
                                        </select>
                                    </form>
                                </div>
                                <div class="col-md-4">
                                    <form asp-action="UpdateQuantity" method="post">
                                        <input type="hidden" name="orderDetailId" value="@item.Id" />
                                        <div class="input-group">
                                            <input type="number"
                                                   name="newQuantity"
                                                   value="@item.Quantity"
                                                   min="1"
                                                   max="@item.ProductSize.Stock"
                                                   class="form-control">
                                            <button type="submit" class="btn btn-primary">Actualizar</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-2">
                                    <form asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="orderDetailId" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Resumen</h5>
                        <p>Total: @Model.OrderDetails.Sum(od => od.Price).ToString("C")</p>
                        <form asp-action="Checkout" method="post">
                            <button type="submit" class="btn btn-success w-100">Finalizar Compra</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">Tu carrito está vacío</div>
    }
</div>