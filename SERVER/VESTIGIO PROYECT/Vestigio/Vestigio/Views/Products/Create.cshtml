@model Vestigio.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-xxl col-xl">
            <!-- Card Wrapper -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h2 class="mb-0">Create New Product</h2>
                </div>
                <div class="card-body px-5 py-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Form divided into two columns -->
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <!-- Product Name -->
                                <div class="form-group mb-4">
                                    <label asp-for="Name" class="form-label fw-bold">Product Name</label>
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Classic Hoodie..." />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- Description -->
                                <div class="form-group mb-4">
                                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                                    <textarea asp-for="Description" class="form-control form-control-lg" style="resize:none" draggable="false" rows="1" placeholder="A comfortable and stylish hoodie..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <!-- Price -->
                                <div class="form-group mb-4">
                                    <label asp-for="Price" class="form-label fw-bold">Price</label>
                                    <input asp-for="Price" class="form-control form-control-lg" placeholder="59.99..." />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <!-- Stock -->
                                <div class="form-group mb-4">
                                    <label asp-for="Stock" class="form-label fw-bold">Stock</label>
                                    <input asp-for="Stock" class="form-control form-control-lg" placeholder="100..." />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>

                                <!-- Rarity Level (Number Input) -->
                                <div class="form-group mb-4">
                                    <label asp-for="RarityLevel" class="form-label fw-bold">Rarity Level</label>
                                    <input asp-for="RarityLevel" type="number" class="form-control form-control-lg" placeholder="1 for common, 10 for legendary..." min="1" max="10" />
                                    <span asp-validation-for="RarityLevel" class="text-danger"></span>
                                </div>

                                <!-- Category -->
                                <div class="form-group mb-4">
                                    <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                                    <select asp-for="CategoryId" class="form-control form-control-lg" asp-items="ViewBag.CategoryId">
                                        <option value="">Select Category</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Images -->
                        <div class="form-group mb-4">
                            <label for="imageFiles" class="form-label fw-bold">Images</label>
                            <input type="file" id="imageFiles" name="imageFiles" multiple class="form-control form-control-lg" />
                            <span asp-validation-for="Images" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark btn-lg text-uppercase fw-bold">Create Product</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center">
                    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
