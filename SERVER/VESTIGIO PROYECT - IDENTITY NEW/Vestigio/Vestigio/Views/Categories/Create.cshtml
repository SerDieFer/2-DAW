@model Vestigio.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white text-center">
                    <h2 class="mb-0">Create New Category</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Category Name -->
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter category name..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg text-uppercase fw-bold">Create Category</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center">
                    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}